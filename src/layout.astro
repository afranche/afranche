---
import { Content as README } from "../../README.md";

import Navbar from "../components/Navbar.astro";
---

<html lang="en">

  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,400;0,500;0,800;1,400;1,500&family=Victor+Mono&display=swap"
      rel="stylesheet"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Afranche</title>
  </head>

  <body class="flex flex-col items-center text-sm md:text-lg text-indigo-300">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    @apply bg-[radial-gradient(ellipse_at_bottom_right,_var(--tw-gradient-stops))] from-indigo-400 via-indigo-600 to-indigo-900;
    font-family: "Rubik", sans-serif;
    overflow-x: hidden;
    background-color: theme(colors.indigo.900);
  }
</style>

<style>
  body {
    @apply w-full min-h-screen;

    background-image: url("/hideout.svg");
    background-size: 50px;
  }
</style>